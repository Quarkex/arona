def slugify( string )
    string.gsub!(/á/, "a")
    string.gsub!(/é/, "e")
    string.gsub!(/í/, "i")
    string.gsub!(/ó/, "o")
    string.gsub!(/ú/, "u")
    string.gsub!(/ñ/, "n")
    string.gsub!(/[\s]+/, "_")
    string.gsub!(/[^a-z A-Z _ \- 0-9]*/, "")
    string.downcase!
    string
end

